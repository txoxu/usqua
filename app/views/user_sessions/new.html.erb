<div class="container">
  <div class="row">
    <div class=" col-md-10 mx-md-auto mt-md-5 pt-md-5 bg-body-secondary">
      <h1><%= t('.title') %></h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit t('.login'), class: "btn btn-outline-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <%= link_to t('.password_forget'), password_reset_path, class: 'link-secondary d-inline-block ms-3' %>
      </div>
    </div>
  </div>
</div>
