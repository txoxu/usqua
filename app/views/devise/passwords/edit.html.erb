<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto bg-body-secondary shadow-lg">
      <h2>パスワードを変更します</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "新しいパスワード" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード確認用" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
            <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
