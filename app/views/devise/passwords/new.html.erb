<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto bg-body-secondary shadow-lg">
      <h2>パスワードをお忘れですか？</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "パスワードリセット手順を送信する", class: "btn btn-outline-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
