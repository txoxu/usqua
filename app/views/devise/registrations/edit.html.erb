<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto bg-body-secondary shadow-lg">
      <h2>パスワードを設定</h2>
      <%= form_for(resource, as: resource_name, url: edit_registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="mb-5">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="mb-5">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
          <%= f.submit "パスワードを設定する", class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>

