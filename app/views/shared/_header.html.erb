<header class="fixed-top">
  <nav class='navbar navbar-expand-lg navbar-light bg-light'>
    <%= link_to '/', class: 'navbar-brand' do %>
      <p class="m-0"><%= t('.title') %></p>
    <% end %>
    <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
        <%= link_to t('.whiskey'), '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
        <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('.whiskey_new'), new_whiskey_path, class: 'dropdown-item' %>
            <%= link_to t('.whiskey_index'), whiskeys_path, class: 'dropdown-item' %>
          </div>
        <li class='nav-item'>
          <%= link_to mypage_path, class: 'nav-link' do %><%= t('.mypage') %><% end %>
        </li>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            <%= image_tag 'image.png', class: 'rounded-circle mr15', width: '40', height: '40' %>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= current_user.decorate.full_name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to t('.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
