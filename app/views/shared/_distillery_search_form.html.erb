<%= form_with model: @distillery_search_form, url: distilleries_path, method: :get, class: 'search_form text-center' do |f| %>
  <div class="row justify-content-center">
      <div class="col-md-6">
        <%= f.text_field :keyword, class: 'form-control', placeholder: 'キーワードを入力' %>
      </div>
      <div class="col-md-1 d-flex align-items-end">
        <%= f.submit t('helpers.submit.search'), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>

