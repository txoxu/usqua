<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @cocktail_search_form, url: cocktails_path, method: :get, class: 'search-form col-12 col-md-10 col-lg-8' do |f| %>
      <div class="row">
        <div class="col-12 mb-3">
          <%= f.text_field :keyword, class: 'form-control', placeholder: 'キーワードを入力' %>
        </div>
        <div class="col-12 mb-3">
          <%= f.submit t('helpers.submit.search'), class: 'btn btn-success w-100' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
