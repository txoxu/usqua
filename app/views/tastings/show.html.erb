<% breadcrumb :whiskey_tasting, @tasting %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 tasting-frame shadow-lg bg-body-secondary">
      <h1 class="text-center"><%= t('.title') %></h1>

      <div class="form-group row tasting-type">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.tasting_type') %></label>
        <div class="col-md-9">
          <p class="form-control-plaintext"><%= @tasting.tasting_type %></p>
        </div>
      </div>

      <div class="form-group row tasting-flavor">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.flavor') %></label>
        <div class="col-md-9">
          <div class="rating-stars" data-rating="<%= @tasting.flavor %>"></div>
        </div>
      </div>

      <div class="form-group row tasting-aroma">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.aroma') %></label>
        <div class="col-md-9">
          <div class="rating-stars" data-rating="<%= @tasting.aroma %>"></div>
        </div>
      </div>

      <div class="form-group row tasting-body">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.body') %></label>
        <div class="col-md-9">
          <div class="rating-stars" data-rating="<%= @tasting.body %>"></div>
        </div>
      </div>

      <div class="form-group row tasting-finish">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.finish') %></label>
        <div class="col-md-9">
          <div class="rating-stars" data-rating="<%= @tasting.finish %>"></div>
        </div>
      </div>

      <div class="form-group row tasting-text">
        <label class="col-md-3 col-form-label"><%= t('helpers.label.tasting_text') %></label>
        <div class="col-md-9">
          <p class="form-control-plaintext"><%= @tasting.tasting_text %></p>
        </div>
      </div>

      <div class="actions text-right">
        
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.rating-stars').each(function() {
      var rating = $(this).data('rating');
      var stars = '';
      for (var i = 1; i <= 5; i++) {
        if (i <= rating) {
          stars += '<span class="star">&#9733;</span>'; // ★
        } else {
          stars += '<span class="star">&#9734;</span>'; // ☆
        }
      }
      $(this).html(stars);
    });
  });
</script>

<style>
  .rating-stars {
    font-size: 1.5em;
    color: gold;
  }
  .star {
    margin-right: 2px;
  }
</style>
