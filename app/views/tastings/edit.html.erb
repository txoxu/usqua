<% breadcrumb :edit_whiskey_tasting, @tasting %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 tasting-edit-frame">
      <h1 class="text-center"><%= t('.title') %></h1>
      <%= form_with model: [@whiskey, @tasting], id: 'edit_whiskey_tasting', local: true do |f| %>
        <div class="form-group row tasting-edit-type">
          <%= f.label :tasting_type, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :tasting_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-edit-aroma">
          <%= f.label :aroma, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :aroma, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-edit-flavor">
          <%= f.label :flavor, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :flavor, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-edit-text">
          <%= f.label :tasting_text, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_area :tasting_text, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-edit-tag">
          <%= f.label :tag_names, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :tag_names, value: @tag_names.join(','), class: "form-control", placeholder: "','で区切ってください" %>
          </div>
        </div>

        <div class="actions text-right">
          <%= f.submit t('helpers.submit.update'), class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
