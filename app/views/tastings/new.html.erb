<% content_for :breadcrumbs do %>
  <%= breadcrumb :new_tasting, @whiskey %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 tasting-edit-frame shadow-lg bg-body-secondary">
      <h1 class="text-center"><%= t('.title') %></h1>
      <%= form_with model: @tasting, url: whiskey_tastings_path(@whiskey), local: true do |f| %>
        <div class="form-group row tasting-type">
          <%= f.label :tasting_type, class: "col-md-3 col-form-label" %><span class="text-danger">*</span>
          <div class="col-md-9">
            <%= f.text_field :tasting_type, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group row tasting-flavor">
          <%= f.label :flavor, class: "col-md-3 col-form-label" %><span class="text-danger">*</span>
          <div class="col-md-9">
            <%= f.text_field :flavor, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group row tasting-aroma">
          <%= f.label :aroma, class: "col-md-3 col-form-label" %><span class="text-danger">*</span>
          <div class="col-md-9">
            <%= f.text_field :aroma, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group row tag">
          <%= f.label :tag_names, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :tag_names, class: "form-control", placeholder: "','で区切ってください" %>
          </div>
        </div>

        <div class="form-group row tasting-explanation">
          <%= f.label :tasting_text, class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_area :tasting_text, class: "form-control" %>
          </div>
        </div>

        <div class="actions text-right">
          <%= f.submit t('helpers.submit.create'), class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
