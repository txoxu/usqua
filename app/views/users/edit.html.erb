<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="card bg-body-secondary shadow-lg" style="width: 40rem; ">
      <div class="card-body">
        <h3 class="card-title mb-5">プロフィール編集</h3>
          <%= form_with model: @user, id: 'edit_user', local: true do |f| %>
            <h5 class="card-name mb-5">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </h5>
            <h5 class="card-email mb-5">
              <%= f.label :email, class: "form-label" %>
              <%= f.text_field :email, class: "form-control" %>
            </h5>
              <%= f.submit t('helpers.submit.create'), class: "btn btn-outline-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

