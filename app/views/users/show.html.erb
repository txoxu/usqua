<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="card bg-body-secondary" style="width: 40rem; ">
      <div class="card-body">
        <h3 class="card-title mb-5">プロフィール</h3>
        <h5 class="card-name mb-5"><span style="margin-right: 100px;">名前：</span><%= current_user.name %></h5>
        <h5 class="card-email mb-5"><span style="margin-right: 30px;">メールアドレス：</span><%= current_user.email %></h5>
        <%= link_to 'プロフィールを編集する', edit_user_path(current_user), class: 'btn btn-outline-secondary' %>
        <%= button_to "アカウントを解約する", registration_path(current_user), data: { confirm: "本当に解約しますか？", turbo_confirm: "本当に解約しますか？" }, method: :delete %>
      </div>
    </div>
  </div>
</div>

